  "grammar_lessons": [
    {
      "id": 1,
      "title": "Sandhi: Vowel Combinations",
      "concept": "When two vowels meet at word boundaries, they combine according to specific rules.",
      "examples": [
        {
          "rule": "a/ā + a/ā = ā",
          "example": "योग + अनुशासनम् = योगानुशासनम्",
          "explanation": "The 'a' at the end of 'yoga' combines with the 'a' at the beginning of 'anuśāsanam' to form 'ā'"
        },
        {
          "rule": "a/ā + i/ī = e",
          "example": "योग + इति = योगेति",
          "explanation": "When 'a' meets 'i', they combine to form 'e'"
        }
      ],
      "quiz": [
        {
          "question": "What is the sandhi of 'चित्त + उत्थान'?",
          "options": [
            "चित्तुत्थान",
            "चित्तोत्थान",
            "चित्तौत्थान"
          ],
          "correct": 1,
          "explanation": "a + u = o, so चित्त + उत्थान = चित्तोत्थान"
        },
        {
          "question": "Break the sandhi: योगानुशासनम्",
          "options": [
            "योग + अनुशासनम्",
            "योगा + नुशासनम्",
            "योगान् + उशासनम्"
          ],
          "correct": 0,
          "explanation": "The long ā is formed from a + a"
        }
      ]
    },
